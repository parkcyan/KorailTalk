<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:fillViewport="true"
    tools:context=".ticketing.TicketingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_tic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="2dp"
            app:tabIndicatorColor="@color/main"
            app:tabRippleColor="@color/gray2"
            app:tabSelectedTextColor="@color/main"
            app:tabTextAppearance="@style/tabText"
            app:tabTextColor="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="출발"
                        android:textColor="@color/gray3"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="도착"
                        android:textColor="@color/gray3"
                        android:textSize="18sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_baseline_sync_24" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <TextView
                                android:id="@+id/tv_tic_dep"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:text="출발"
                                android:textColor="@color/main"
                                android:textSize="35sp" />

                            <View
                                android:id="@+id/v_tic_dep"
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:background="@color/main" />

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_tic_arr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="도착"
                            android:textColor="@color/main"
                            android:textSize="35sp" />

                        <View
                            android:id="@+id/v_tic_arr"
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/main" />

                    </RelativeLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_baseline_arrow_forward_24" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tic_hide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_button"
                android:gravity="center"
                android:padding="5dp"
                android:text="KTX역 선택 지도"
                android:textColor="@color/gray4"
                android:textSize="21sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            android:background="@drawable/round_background_main4"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_tic_nodefold"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_search_24" />

                <EditText
                    android:id="@+id/et_tic_node"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="10"
                    android:background="@android:color/transparent"
                    android:hint="역 명의 초성 또는 전체를 입력해 주세요."
                    android:maxLength="10"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_tic_nodeclear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_clear_24"
                    android:visibility="invisible" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_tic_dark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#AB000000"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_tic_sfl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가"
                        android:textColor="@color/white"
                        android:textSize="120sp"
                        android:layout_centerInParent="true"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="11.8"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_tic_sfl1"
                                style="@style/ivsearchFirstLetter"/>

                            <ImageView
                                android:id="@+id/iv_tic_sfl2"
                                style="@style/ivsearchFirstLetter"/>

                            <ImageView
                                android:id="@+id/iv_tic_sfl3"
                                style="@style/ivsearchFirstLetter"/>

                            <ImageView
                                android:id="@+id/iv_tic_sfl4"
                                style="@style/ivsearchFirstLetter"/>

                            <ImageView
                                android:id="@+id/iv_tic_sfl5"
                                style="@style/ivsearchFirstLetter"/>

                            <ImageView
                                android:id="@+id/iv_tic_sfl6"
                                style="@style/ivsearchFirstLetter"/>

                            <ImageView
                                android:id="@+id/iv_tic_sfl7"
                                style="@style/ivsearchFirstLetter"/>

                            <ImageView
                                android:id="@+id/iv_tic_sfl8"
                                style="@style/ivsearchFirstLetter"/>

                            <ImageView
                                android:id="@+id/iv_tic_sfl9"
                                style="@style/ivsearchFirstLetter"/>

                            <ImageView
                                android:id="@+id/iv_tic_sfl10"
                                style="@style/ivsearchFirstLetter"/>

                            <ImageView
                                android:id="@+id/iv_tic_sfl11"
                                style="@style/ivsearchFirstLetter"/>

                            <ImageView
                                android:id="@+id/iv_tic_sfl12"
                                style="@style/ivsearchFirstLetter"/>

                            <ImageView
                                android:id="@+id/iv_tic_sfl13"
                                style="@style/ivsearchFirstLetter"/>

                            <ImageView
                                android:id="@+id/iv_tic_sfl14"
                                style="@style/ivsearchFirstLetter"/>

                            <ImageView
                                android:id="@+id/iv_tic_sfl15"
                                style="@style/ivsearchFirstLetter"/>

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ScrollView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="13"
                        android:fillViewport="true">

                    </ScrollView>

                    <LinearLayout
                        android:id="@+id/ll_tic_sfl"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/round_button"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_tic_sfl1"
                            style="@style/tvsearchFirstLetter"
                            android:text="가" />

                        <TextView
                            android:id="@+id/tv_tic_sfl2"
                            style="@style/tvsearchFirstLetter"
                            android:text="최" />

                        <TextView
                            android:id="@+id/tv_tic_sfl3"
                            style="@style/tvsearchFirstLetter"
                            android:text="주" />

                        <TextView
                            android:id="@+id/tv_tic_sfl4"
                            style="@style/tvsearchFirstLetter"
                            android:text="ㄱ" />

                        <TextView
                            android:id="@+id/tv_tic_sfl5"
                            style="@style/tvsearchFirstLetter"
                            android:text="ㄴ" />

                        <TextView
                            android:id="@+id/tv_tic_sfl6"
                            style="@style/tvsearchFirstLetter"
                            android:text="ㄷ" />

                        <TextView
                            android:id="@+id/tv_tic_sfl7"
                            style="@style/tvsearchFirstLetter"
                            android:text="ㅁ" />

                        <TextView
                            android:id="@+id/tv_tic_sfl8"
                            style="@style/tvsearchFirstLetter"
                            android:text="ㅂ" />

                        <TextView
                            android:id="@+id/tv_tic_sfl9"
                            style="@style/tvsearchFirstLetter"
                            android:text="ㅅ" />

                        <TextView
                            android:id="@+id/tv_tic_sfl10"
                            style="@style/tvsearchFirstLetter"
                            android:text="ㅇ" />

                        <TextView
                            android:id="@+id/tv_tic_sfl11"
                            style="@style/tvsearchFirstLetter"
                            android:text="ㅈ" />

                        <TextView
                            android:id="@+id/tv_tic_sfl12"
                            style="@style/tvsearchFirstLetter"
                            android:text="ㅊ" />

                        <TextView
                            android:id="@+id/tv_tic_sfl13"
                            style="@style/tvsearchFirstLetter"
                            android:text="ㅌ" />

                        <TextView
                            android:id="@+id/tv_tic_sfl14"
                            style="@style/tvsearchFirstLetter"
                            android:text="ㅍ" />

                        <TextView
                            android:id="@+id/tv_tic_sfl15"
                            style="@style/tvsearchFirstLetter"
                            android:text="ㅎ" />


                    </LinearLayout>


                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>