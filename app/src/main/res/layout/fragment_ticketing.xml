<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/whitesmoke"
    android:orientation="vertical"
    tools:context=".ticketing.TicketingFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_roundTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="2dp"
        android:visibility="visible"
        app:tabIndicatorColor="@color/main"
        app:tabRippleColor="@color/gray2"
        app:tabSelectedTextColor="@color/main"
        app:tabTextAppearance="@style/tabText"
        app:tabTextColor="@color/gray" />

    <ScrollView
        android:id="@+id/sv_tic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="출발"
                            android:textColor="@color/gray3"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="도착"
                            android:textColor="@color/gray3"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_baseline_sync_24" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/rl_dep"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <TextView
                                    android:id="@+id/tv_dep"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:text="서울"
                                    android:textColor="@color/main"
                                    android:textSize="35sp" />

                                <View
                                    android:id="@+id/v_dep"
                                    android:layout_width="0dp"
                                    android:layout_height="2dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:background="@color/main" />

                            </RelativeLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_arr"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tv_arr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:text="대전"
                                android:textColor="@color/main"
                                android:textSize="35sp" />

                            <View
                                android:id="@+id/v_arr"
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:background="@color/main" />

                        </RelativeLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_baseline_arrow_forward_24" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_hide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_button"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="KTX역 선택 지도"
                    android:textColor="@color/gray4"
                    android:textSize="21sp" />

                <View
                    android:id="@+id/v_date"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:id="@+id/ll_date"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="출발일"
                        android:textColor="@color/main3"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:gravity="center"
                        android:text="Date"
                        android:textSize="28sp" />

                    <ImageView
                        android:id="@+id/iv_dateexpand"
                        android:layout_width="40dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_baseline_keyboard_arrow_down_24_main" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_date_content"
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:background="@color/whitesmoke2"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="25dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_button"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="달력에서 날짜 선택"
                        android:textColor="@color/gray4"
                        android:textSize="21sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_date"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_time"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="0.5"
                        android:background="@color/lightgray" />


                </LinearLayout>

                <View
                    android:id="@+id/v_qty"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:id="@+id/ll_qty"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:text="승객 연령 및 좌석 수"
                        android:textColor="@color/main3"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_qty"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:gravity="center"
                        android:text="총 1명"
                        android:textSize="28sp" />

                    <ImageView
                        android:id="@+id/iv_qtyexpand"
                        android:layout_width="40dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_baseline_keyboard_arrow_down_24_main" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_qty_content"
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:background="@color/whitesmoke2"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:text="최소 1명 - 최대 9명"
                        android:textSize="18sp"
                        android:textColor="@color/gray2"
                        android:layout_marginTop="10dp"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:textSize="22sp"
                            android:gravity="center_vertical"
                            android:text="어른(만 13세 이상)"/>

                        <ImageButton
                            android:id="@+id/ib_qty1min"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:padding="0dp"
                            android:scaleType="fitCenter"
                            android:background="@color/whitesmoke2"
                            android:src="@drawable/ic_baseline_remove_circle_outline_24" />

                        <TextView
                            android:id="@+id/tv_qty1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1"
                            android:textSize="22sp"/>

                        <ImageButton
                            android:id="@+id/ib_qty1pls"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:padding="0dp"
                            android:scaleType="fitCenter"
                            android:background="@color/whitesmoke2"
                            android:src="@drawable/ic_baseline_add_circle_outline_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:textSize="22sp"
                            android:gravity="center_vertical"
                            android:text="어린이(만 6-12세)"/>

                        <ImageButton
                            android:id="@+id/ib_qty2min"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:padding="0dp"
                            android:scaleType="fitCenter"
                            android:background="@color/whitesmoke2"
                            android:src="@drawable/ic_baseline_remove_circle_24" />

                        <TextView
                            android:id="@+id/tv_qty2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="22sp"/>

                        <ImageButton
                            android:id="@+id/ib_qty2pls"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:padding="0dp"
                            android:scaleType="fitCenter"
                            android:background="@color/whitesmoke2"
                            android:src="@drawable/ic_baseline_add_circle_outline_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:textSize="22sp"
                            android:gravity="center_vertical"
                            android:text="유아(만 6세 미만)"/>

                        <ImageButton
                            android:id="@+id/ib_qty3min"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:padding="0dp"
                            android:scaleType="fitCenter"
                            android:background="@color/whitesmoke2"
                            android:src="@drawable/ic_baseline_remove_circle_24" />

                        <TextView
                            android:id="@+id/tv_qty3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="22sp"/>

                        <ImageButton
                            android:id="@+id/ib_qty3pls"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:padding="0dp"
                            android:scaleType="fitCenter"
                            android:background="@color/whitesmoke2"
                            android:src="@drawable/ic_baseline_add_circle_outline_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:textSize="22sp"
                            android:gravity="center_vertical"
                            android:text="경로(만 65세 이상)"/>

                        <ImageButton
                            android:id="@+id/ib_qty4min"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:padding="0dp"
                            android:scaleType="fitCenter"
                            android:background="@color/whitesmoke2"
                            android:src="@drawable/ic_baseline_remove_circle_24" />

                        <TextView
                            android:id="@+id/tv_qty4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="22sp"/>

                        <ImageButton
                            android:id="@+id/ib_qty4pls"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:padding="0dp"
                            android:scaleType="fitCenter"
                            android:background="@color/whitesmoke2"
                            android:src="@drawable/ic_baseline_add_circle_outline_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:textSize="22sp"
                            android:gravity="center_vertical"
                            android:text="중증 장애인"/>

                        <ImageButton
                            android:id="@+id/ib_qty5min"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:padding="0dp"
                            android:scaleType="fitCenter"
                            android:background="@color/whitesmoke2"
                            android:src="@drawable/ic_baseline_remove_circle_24" />

                        <TextView
                            android:id="@+id/tv_qty5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="22sp"/>

                        <ImageButton
                            android:id="@+id/ib_qty5pls"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:padding="0dp"
                            android:scaleType="fitCenter"
                            android:background="@color/whitesmoke2"
                            android:src="@drawable/ic_baseline_add_circle_outline_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:textSize="22sp"
                            android:gravity="center_vertical"
                            android:text="경증 장애인"/>

                        <ImageButton
                            android:id="@+id/ib_qty6min"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:padding="0dp"
                            android:scaleType="fitCenter"
                            android:background="@color/whitesmoke2"
                            android:src="@drawable/ic_baseline_remove_circle_24" />

                        <TextView
                            android:id="@+id/tv_qty6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="22sp"/>

                        <ImageButton
                            android:id="@+id/ib_qty6pls"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:padding="0dp"
                            android:scaleType="fitCenter"
                            android:background="@color/whitesmoke2"
                            android:src="@drawable/ic_baseline_add_circle_outline_24" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:id="@+id/ll_option"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:text="상세 옵션"
                        android:textColor="@color/main3"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_option"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:gravity="center"
                        android:text="인접역 표출, SR 연계 표출"
                        android:textSize="28sp" />

                    <ImageView
                        android:id="@+id/iv_optionexpand"
                        android:layout_width="40dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_baseline_keyboard_arrow_down_24_main" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/gray" />

            </LinearLayout>

            <!--////////////////////////////////////////////////-->

            <LinearLayout
                android:id="@+id/ll_node"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_background_main4"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ll_nodefold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/ic_baseline_search_24" />

                    <EditText
                        android:id="@+id/et_node"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="10"
                        android:background="@android:color/transparent"
                        android:hint="역 명의 초성 또는 전체를 입력해 주세요."
                        android:imeOptions="actionDone"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iv_nodeclear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/ic_baseline_clear_24"
                        android:visibility="invisible" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/fl_fic_nodeselect"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:background="@color/whitesmoke">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_node"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="12"
                            android:background="@color/whitesmoke"
                            android:nestedScrollingEnabled="false" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_dark"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#80000000"
                        android:visibility="invisible">

                        <TextView
                            android:id="@+id/tv_sfl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="가"
                            android:textColor="@color/white"
                            android:textSize="120sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="11.8" />

                            <LinearLayout
                                android:id="@+id/ll_sflc"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:orientation="vertical" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="12" />

                        <LinearLayout
                            android:id="@+id/ll_sfl"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/round_button"
                            android:orientation="vertical" />

                    </LinearLayout>

                </FrameLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

